                        <!-- Fifth row: Gender label -->
                        <Label Grid.Row="4" Content="Gender" />
                        <!-- Sixth row: Female/Male drop-down list -->
                        <ComboBox x:Name="cmbGender" Grid.Row="5" Width="300" Margin="5">
